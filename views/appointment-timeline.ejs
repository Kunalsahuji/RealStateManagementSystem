<%- include('partials/header') %>
<div class="container mx-auto my-6 p-6 max-w-6xl">
    <h1 class="text-3xl font-bold text-center mb-6">Appointment Timeline</h1>

    <% if (appointments.length === 0) { %>
        <p class="text-center text-lg">No appointment booked yet.</p>
    <% } else { %>
        <% appointments.forEach(appointment => { %>
            <div class="card bg-white shadow-md px-4 py-4 mb-6 rounded-lg ">
                <div class="flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-bold">Property: <%= appointment.property._id %></h3>
                <p><strong>Status:</strong> <%= appointment.status %></p>
                <p><strong>Date:</strong> <%= appointment.date.toDateString() %></p>
                    </div>
                    <div class=" flex flex-col justify-center items-center text-center gap-2">
                        <a href="/appointment/update/<%= appointment._id %>" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Update</a>
                        <a href="/appointment/delete/<%= appointment._id %>" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">Delete</a>
                    </div>
                    
                </div>
                
            </div>
        <% }) %>
    <% } %>
</div>
<%- include('partials/footer') %>

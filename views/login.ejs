<%- include("partials/header")%>
    <div class="mt-10 w-[80%] mx-auto p-10">

        <h1
            class="w-[25%] hover:bg-slate-400 text-2xl rounded-3xl border border-slate-900 p-3 italic hover:not-italic text-center m-auto">
            Login Page</h1>
        <form class="w-[55%] m-auto rounded-xl  mt-10 m-auto text-center mb-10 bg-slate-400 p-5" action="/user/login"
            method="post">
            <input class="rounded-2xl border border-slate-700 text-black-400 mt-10 px-10 py-3 text-xl bg-slate-500" type="email"
                name="email" placeholder="enter email">
            <br> <br>
            <input class="rounded-2xl border border-slate-700 text-black-400 px-10 py-3 text-xl bg-slate-500" type="password"
                name="password" placeholder="enter password">
            <br><br>
            <button class="border rounded-2xl border-slate-700 px-20 py-2 text-2xl mb-10 hover:bg-slate-500">Submit</button>
        </form>
        <div class="mt-10 w-[65%] m-auto text-slate-900 font-semibold text-xl m-auto text-center p-3">Don't Have an account ?
            <a class="hover:bg-slate-400 text-2xl rounded-full border border-slate-900 px-5 py-2 italic hover:not-italic"
                href="/user/register">Register User</a>
        </div>
    </div>


    <%- include('partials/footer') %>
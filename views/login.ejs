<%- include("partials/header")%>
    <div class="flex items-center justify-center min-h-screen text-white relative overflow-hidden">
       

        <div class="relative z-10 p-6  bg-opacity-80 rounded-lg shadow-lg max-w-md w-full mx-4 glass">
            <h1 class="text-3xl font-bold text-center mb-6 text-gray-800">Login Page</h1>
            <hr class="mb-5 border-t-2 border-gray-700">

            <form class="space-y-4" action="/user/login" method="post">
                <input
                    class="w-full px-4 py-3 text-xl rounded-md bg-indigo-100 text-gray-800 border border-gray-700 placeholder-gray-400"
                    type="email" name="email" placeholder="Enter email">
                <input
                    class="w-full px-4 py-3 text-xl rounded-md bg-indigo-100 text-gray-800 border border-gray-700 placeholder-gray-400"
                    type="password" name="password" placeholder="Enter password">
                <button
                    class="w-full py-3 text-xl rounded-md bg-indigo-600 text-white border border-indigo-700 hover:bg-indigo-700 transition duration-300">Submit</button>
            </form>
            <div class="mt-6 text-center text-gray-800">
                Don't have an account?
                <a class="text-blue-600 hover:text-indigo-500 font-semibold" href="/user/register">Register User</a>
            </div>
        </div>
    </div>


    <%- include('partials/footer') %>
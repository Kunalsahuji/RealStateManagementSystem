<%- include("partials/header")%>
    <div class="w-[100%] m-auto">

        <h1 class="w-[25%]  text-2xl rounded-3xl border border-slate-900 px-3 py-3 mt-4 text-center m-auto">
            Login Page</h1>
        <hr class="mb-5 mt-2 w-[90%] px-5 m-auto">

        <form class="w-[45%] m-auto rounded-xl m-auto text-center mb-5 p-2 bg-gray-200 mt-10" action="/user/login"
            method="post">
            <input class="rounded-2xl border border-slate-700 text-black-400 mt-10 px-10 py-3 text-xl" type="email"
                name="email" placeholder="enter email">
            <br> <br>
            <input class="rounded-2xl border border-slate-700 text-black-400 px-10 py-3 text-xl" type="password"
                name="password" placeholder="enter password">
            <br><br>
            <button class="border rounded-2xl border-slate-700 px-20 py-2 text-2xl mb-10 hover">Submit</button>
        </form>
        <div class="mt-10 w-[65%] m-auto text-slate-900 font-semibold text-xl m-auto text-center p-3">Don't Have an
            account ?
            <a class="hover:bg-gray-200 text-2xl rounded-full border border-slate-900 px-5 py-2 "
                href="/user/register">Register User</a>
        </div>
    </div>


    <%- include('partials/footer') %>
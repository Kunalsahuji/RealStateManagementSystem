<%- include("partials/header") %>
  <div class="mb-5 w-full mx-auto px-6 py-6 text-gray-800">

    <h1 class="text-3xl font-bold text-center mb-6 text-gray-800">
      Homepage
    </h1>
    <hr class="mb-5 w-3/4 mx-auto border-t-2 border-gray-200 mb-6 w-full">

    <div class="m-auto text-center">
      <!-- <h1 class="text-3xl font-semibold text-gray-200 mb-4">Properties</h1> -->
      <% if (!properties || properties.length===0) { %>
        <h1 class="text-2xl text-gray-400">There are no properties created yet...</h1>
        <% } else { %>
          <div class="grid grid-cols-1 lg:grid-cols-2 lg:grid-cols-3 gap-8 mt-5">
            <% properties.forEach((prop)=> { %>
              <div
                class="p-4 glass rounded-lg shadow-md transform transition duration-300 hover:scale-105 border border-gray-700">
                <ul class="space-y-4">
                  <li class="text-center font-semibold text-xl mb-2 text-white">Property Details:</li>
                  <li class="px-4 py-2 text-center font-bold rounded-md shadow-md">
                    Property Creator: <%= prop.owner.name %>
                  </li>
                  <li class="px-4 py-2 text-center rounded-md shadow-lg">
                    <img class="w-full h-48 object-cover rounded-md shadow-lg" src="/images/<%= prop.image %>"
                      alt="Property Image">
                  </li>
                  <li class="px-4 py-2 text-center underline text-gray-800  rounded-md shadow-lg">
                    <%= prop.title %>
                  </li>
                  <li class="px-4 py-2 text-center underlinetext-gray-800  rounded-md shadow-lg">
                    <%= prop.description %>
                  </li>
                  <li class="px-4 py-2 text-center underlinetext-gray-800  rounded-md shadow-lg">
                    <%= prop.price %>
                  </li>
                  <li class="px-4 py-2 text-center underlinetext-gray-800  rounded-md shadow-lg">
                    <%= prop.location %>
                  </li>
                  <li class="px-4 py-2 text-center underlinetext-gray-800 rounded-md shadow-lg">
                    <%= prop.status %>
                  </li>
                </ul>
              </div>
              <% }) %>
          </div>
          <% } %>
    </div>
  </div>
  <%- include('partials/footer') %>
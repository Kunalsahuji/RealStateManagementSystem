<%- include('partials/header') %>
    <div class="mt-10 w-[80%] mx-auto p-10">
        <h1
            class="w-[25%] hover:bg-slate-400 text-2xl rounded-3xl border border-slate-900 p-3 italic hover:not-italic m-auto">
            Create Appointment</h1>
        <form class="w-[55%] m-auto rounded-xl m-auto text-center mb-5 mt-5 bg-slate-400 p-3"
            action="/appointment/<%= pid%>" method="post">
            <input class="w-[60%] rounded-2xl border border-slate-700 text-black-400 mb-5  px-10 py-3 text-xl bg-slate-500"
                type="text" name="status" placeholder="scheduled, completed, canceled"><br> <br>
            <input class="w-[60%] rounded-2xl border border-slate-700 text-black-400 mb-5  px-10 py-3 text-xl bg-slate-500"
                type="date" name="date" placeholder="Date"> <br> <br>
            <button class="border rounded-2xl border-slate-700 px-20 py-2 text-2xl hover:bg-slate-500">Submit</button>
        </form>

    </div>
    <%- include('partials/footer') %>
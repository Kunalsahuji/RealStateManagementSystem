<%- include('partials/header') %>

    <div class="min-h-screen flex items-center justify-center">
        <div class="relative z-10 p-6 glass rounded-lg shadow-lg max-w-md w-full mx-4">
            <h1 class="text-3xl font-bold text-center mb-6">Create Appointment</h1>
            <hr class="mb-5 border-t-2 border-gray-700">

            <form class="space-y-4" action="/appointment/<%= property %>" method="post">
                <input
                    class="bg-opacity-80 shadow-lg glass w-full rounded-2xl px-4 py-3 text-lg mb-4"
                    type="text" name="status" placeholder="Status (e.g., scheduled, completed, cancelled)">
                <input
                    class="bg-opacity-80 shadow-lg glass w-full rounded-2xl px-4 py-3 text-lg mb-4"
                    type="date" name="date">
                <button
                    class="w-full py-3 text-xl rounded-md bg-indigo-600 text-white border border-indigo-700 hover:bg-indigo-700 transition duration-300">Submit</button>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>
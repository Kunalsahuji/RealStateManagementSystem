<%- include('partials/header') %>
    <div class="mt-10 w-[80%] mx-auto p-10 bg-gray-200">
        <h1 class="w-[25%] text-2xl rounded-3xl border border-slate-900 p-3 m-auto">
            Create Appointment</h1>
        <form class="w-[55%] m-auto rounded-xl m-auto text-center mb-5 mt-5 bg-gray-200 p-3"
            action="/appointment/<%= pid%>" method="post">
            <input class="w-[60%] rounded-2xl border border-slate-700 mb-5  px-10 py-3 text-xl bg-gray-100" type="text"
                name="status" placeholder="scheduled, completed, canceled"><br> <br>
            <input class="w-[60%] rounded-2xl border border-slate-700 mb-5  px-10 py-3 text-xl bg-gray-100" type="date"
                name="date" placeholder="Date"> <br> <br>
            <button class="border-slate-700 text-xl border rounded-2xl bg-gray-200 w-[45%] px-3 py-2">Submit</button>
        </form>

    </div>
    <%- include('partials/footer') %>